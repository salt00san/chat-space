.message
  .message-info
    .message-info__member
      = message.user.name
    .message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages__text
    - if message.content.present?
      %p.messages__text
        = message.content
    = image_tag message.image.url, class: 'messages__text__image' if message.image.present?