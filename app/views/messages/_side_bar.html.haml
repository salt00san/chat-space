.side-bar
  .user-name
    .top-items
      %h3.name
        = current_user.name
      %ul.icons
        %li.list
          = link_to new_group_path, class: "list--icon" do
            = icon('fas', 'edit',  class: "list--edit") 
        %li.list
          = link_to edit_user_path(current_user), class: "list--icon" do
            = icon('fas', 'cog',  class: "list--cog") 
  %ul.groups
    - current_user.groups.each do |group|
      %li.group-lists 
        = link_to '#' do
          .group-name
            = group.name
